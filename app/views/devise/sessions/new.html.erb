
	<div class="container h-100" id="bg-gradient">
		<div class="d-flex justify-content-center h-100" >
			<div class="user_card">
				<h2>Log in</h2>

				<div class="d-flex justify-content-center">
					<div class="brand_logo_container">
						<%= image_tag "logo.png", :class => "style_image" %>
					</div>
				</div>

					<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
					  <div class="field">
					    <%= f.label :email %><br />
					    <%= f.email_field :email, {class:"form-control", placeholder:"Enter email"} %>
					  </div>

					  <div class="field">
					    <%= f.label :password %><br />
					    <%= f.password_field :password, {class:"form-control", placeholder:"Enter password"} %>
					  </div>

					  <% if devise_mapping.rememberable? %>
					    <div class="field">
					      <%= f.check_box :remember_me %>
					      <%= f.label :remember_me %>
					    </div>
					  <% end %>

					  <div class="actions">
					    <%= f.submit "Log in", class:"btn btn-danger" %>
					  </div>
					<% end %>

				<%= render "devise/shared/links" %>

				<hr>
				<%= link_to(user_google_oauth2_omniauth_authorize_path, method: :post, class: "btn btn-social btn-google border mr-1 button is-danger") do %>
            <i class="fa fa-google fa-fw"></i> Sign in with Google
        <% end %>

				<%= link_to(user_facebook_omniauth_authorize_path, method: :post, class: "btn btn-social btn-facebook border mr-1 button is-danger") do %>
						<i class="fa fa-facebook fa-fw"></i> Sign in with Facebook
				<% end %>

				</div>
		</div>
	</div>
